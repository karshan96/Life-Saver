<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bld"
    tools:context=".RegistrationMenuActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="395dp"
        android:layout_height="643dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/person"
            android:layout_width="132dp"
            android:layout_height="146dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/per"
            android:onClick="registerPerson"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/hospital"
            android:layout_width="137dp"
            android:layout_height="149dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/hos"
            android:onClick="registerHospital"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/person"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="139dp"
            android:layout_height="41dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="168dp"
            android:gravity="center"
            android:text="Person"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/person"
            app:layout_constraintVertical_bias="0.383" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="135dp"
            android:layout_height="43dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="168dp"
            android:gravity="center"
            android:text="Hospital"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/hospital"
            app:layout_constraintVertical_bias="0.363" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>